<Window xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DosGameOrganizer"
        x:Class="DosGameOrganizer.OrganizerWindow"
        Title="OrganizerWindow" 
        mc:Ignorable="d"
        Height="800" 
        Width="1400"
        >
    
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" Padding="5">
                <MenuItem Header="Scan directory ..." Click="ScanDirectoryClick">
                    <MenuItem.Icon>
                        <local:Win32IconResource ResourceIndex="3" LargeIcon="True"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Exit" Click="ExitFromApp">
                    <MenuItem.Icon>
                        <local:Win32IconResource ResourceIndex="27" LargeIcon="True"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Utils" Padding="5">
                <MenuItem Header="Icon Preview" Click="OpenPreviewClick"></MenuItem>
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                
            </ToolBar>
        </ToolBarTray>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <DataGrid SelectionChanged="_Grid_SelectionChanged"
                      EnableColumnVirtualization="True"
                      ItemsSource="{Binding DataList}" 
                      EnableRowVirtualization="True"                      
                      LoadingRow="_Grid_LoadingRow"
                      AutoGenerateColumns="False" 
                      GridLinesVisibility="None"
                      CanUserAddRows="False"
                      BorderThickness="0"
                      IsReadOnly="True"
                      Grid.Column="0"
                      x:Name="_Grid"
                      >
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type DataGridCell}">
                                    <Border BorderThickness="{TemplateBinding BorderThickness}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"                                            
                                            SnapsToDevicePixels="True"
                                            >
                                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Year"      Binding="{Binding Year}"      />
                    <DataGridTextColumn Header="Title"     Binding="{Binding Title}"     />
                    <DataGridTextColumn Header="Developer" Binding="{Binding Developer}" />
                    <DataGridTextColumn Header="Path"      Binding="{Binding Path}"      />
                </DataGrid.Columns>
            </DataGrid>
            <GridSplitter HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"/>
            <TabControl Grid.Column="2">
                <TabItem Header="General">
                    <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding ElementName=_Grid, Path=SelectedItem.ZipContents}" Grid.IsSharedSizeScope="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <ItemContainerTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="ZipContentsWidthGroup"/>
                                    </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <local:Win32IconResource ResourceIndex="0" Width="16" Height="16"/>
                                            <TextBlock Padding="5" Text="{Binding}" />
                                        </StackPanel>
                                    </Grid>
                            </ItemContainerTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>    
    
</Window>
